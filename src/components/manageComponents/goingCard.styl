.going-card{
  border 1px solid #e3e3e3;
  width 48%;
  margin 1%
  box-sizing border-box;
  display inline-block;
  cursor pointer
  .apply-ul{
    padding 0 10px 0 20px
    .activity-name{
      display inline-block
      max-width 320px
      overflow hidden
      text-overflow ellipsis
      white-space nowrap
      font-weight bold
    }
    .activity-release-time{
      vertical-align top
      float right
    }
    .time-location{
      line-height 30px
      span{
        border 1px solid #d5d5d5
        border-radius 5px
        padding 1px 10px
        background-color #ececec
      }
      .last-time{
        margin-right 10px
      }
    }
  }
  .apply-btn{
    padding  0 10px 10px 10px
    font-size 14px
    button{
      margin-left 50px
    }
  }
  li{
    list-style none
  }
  .apply-detail{
    display -webkit-box
    div:first-child{
      -webkit-box-flex 1
      .apply-auth{
        .apply-sponsor{
          margin-right 30px
        }
        .certificated{
          color #40da5e
        }
      }
    }
    .apply-price{
      padding-right 30px
      color #fd7878
      .price-num{
        font-size 32px
      }
      .price-unit{
        color #4d4d4d
      }
    }
    .apply-jobs{
      border 1px solid #e3e3e3
      padding 1px 8px
      border-radius 5px
      margin-right 5px
      line-height 28px
    }
  }
  .apply-step{
    margin 10px 40px 0 40px
  }
}
.el-message-box__wrapper{
  .going-message{
    width 570px
  }
}
